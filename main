import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		// Declaração de variáveis
		
				String produto1 = "computador";
				String produto2 = "Office desk";
				
				int idade = 30;
				int codigo = 5290;
				char genero = 'F';
				
				double preco1 = 2100.0;
				double preco2 = 650.50;
				double medida = 53.234567;
				// Usei o printf e o "%s" para concatenar o texto. %.2f significa que eu queria 2 casas decimais
				
				System.out.println("Produtos: ");
				System.out.printf("%s, cujo preço é %.2f reais%n", produto1, preco1);
				System.out.printf("%s, cujo preço é %.2f reais%n", produto2, preco2);
				System.out.println("\n"); // usei "\n" apenas para pular linha
				
				// usei o %d para concatenar numeros inteiros
				System.out.print("Record:");
				System.out.printf("%d anos, código %d e gênero: %s", idade, codigo, genero);
				System.out.println("\n\n");
				
				
				System.out.printf("medida com oito casas decimais: %.8f %n", medida);
				System.out.printf("medida com três casas decimais: %.3f %n", medida);
				Locale.setDefault(Locale.US); // usei para mudar o sistema de pontuação(vírgula) para o (ponto)
				System.out.printf("medida com três casas decimais: %.3f", medida);
				
				
	}      
	
}
